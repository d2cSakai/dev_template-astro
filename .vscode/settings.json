{
  "editor.defaultFormatter": "esbenp.prettier-vscode", // 標準のフォーマッターを Prettier に設定
  "editor.formatOnSave": true, // 保存時およびペースト時に自動フォーマットを実行する

  // 保存時の実行アクション
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "prettier.documentSelectors": ["**/*.astro"],

  // VSCode で import を記述する際に tsconfig の設定に応じて絶対パスとする
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",

  "scss.validate": false, // SCSSファイルの検証を無効にするかを指定します
  "eslint.validate": ["javascript", "typescript"],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // TypeScriptファイルのデフォルトフォーマッタ
  }
}
