---
import Layout from '@/layouts/Layout.astro';
import styles from './styles.module.scss';
---

<Layout title="Welcome to Astro." />

<ul role="tree" class="TreeView js-treeView">
  <li role="treeitem" aria-expanded="false" aria-selected="false" tabindex="-1" class={styles.TreeViewNode}>
    <div class={styles.TreeViewNodeName}>ノード 1</div>
    <ul role="group" class={styles.TreeViewSubtree}>
      <li role="treeitem" aria-selected="false" tabindex="-1" class={styles.TreeViewNode}>
        <div class={styles.TreeViewNodeName}>ノード 1.1</div>
      </li>
      <li role="treeitem" aria-selected="false" tabindex="-1" class={styles.TreeViewNode}>
        <div class={styles.TreeViewNodeName}>ノード 1.2</div>
      </li>

      <li role="treeitem" aria-expanded="false" aria-selected="false" tabindex="0" class={styles.TreeViewNode}>
        <div class={styles.TreeViewNodeName}>ノード 1.3</div>
        <ul role="group" class={styles.TreeViewSubtree}>
          <li role="treeitem" aria-selected="false" tabindex="-1" class={styles.TreeViewNode}>
            <div class={styles.TreeViewNodeName}>ノード 1.3.1</div>
          </li>

          <li role="treeitem" aria-expanded="false" aria-selected="false" tabindex="-1" class={styles.TreeViewNode}>
            <div class={styles.TreeViewNodeName}>ノード 1.3.2</div>
            <ul role="group" class={styles.TreeViewSubtree}>
              <li role="treeitem" aria-selected="false" tabindex="-1" class={styles.TreeViewNode}>
                <div class={styles.TreeViewNodeName}>ノード 1.3.2.1</div>
              </li>
              <li role="treeitem" aria-selected="true" tabindex="-1" class={styles.TreeViewNode}>
                <div class={styles.TreeViewNodeName}>ノード 1.3.2.2</div>
              </li>
            </ul>
          </li>
        </ul>
      </li>
    </ul>
  </li>
</ul>
